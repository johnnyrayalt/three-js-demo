{
  "env": {
      "es6": true,
      "browser": true,
      "node": true
    },
    "extends": "eslint:recommended",
    "parser": "babel-eslint",
    "parserOptions": {
      "ecmaVersion": 2017,
      "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "no-console": 0,
        "no-unused-vars": 0,
        "react/jsx-key": 0,
        "react/jsx-uses-vars": 0,
        "react/jsx-uses-react": 0,
        "react/jsx-no-duplicate-props": 0,
        "react/jsx-no-undef": 0,
        "react/no-multi-comp": 0,
        "react/jsx-pascal-case": 0,
        "react/prop-types": 0,
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ]
    }
}
